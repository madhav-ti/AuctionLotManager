@model AuctionLotManager.Models.Lot

@{
    ViewBag.Title = "Delete Lot";
}

<h2>Delete Lot</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Html.DisplayFor(m => m.Title)</dd>

        <dt>Start Price</dt>
        <dd>@Html.DisplayFor(m => m.StartPrice)</dd>

        <dt>Current Bid</dt>
        <dd>@Html.DisplayFor(m => m.CurrentBid)</dd>

        <dt>Start Time</dt>
        <dd>@Html.DisplayFor(m => m.StartTime)</dd>

        <dt>End Time</dt>
        <dd>@Html.DisplayFor(m => m.EndTime)</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Lot", new { id = Model.LotID }))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}